<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS_Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-heading">Menu</div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="HomeAdmin">Student Management</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ListTeacher" asp-controller="HomeAdmin">Teacher Management</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ListCourse" asp-controller="HomeAdmin">Course Management</a>
            </li>
        </ul>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Home</a>
        <div class="dropdown">
            <div class="avatar dropdown-toggle" id="avatarDropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="https://tse2.mm.bing.net/th?id=OIP.oDCZgAqN6cEe0AXa0buegAHaNJ&pid=Api&P=0&h=180" alt="User Avatar">
            </div>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="avatarDropdownMenu">
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-action="Login" asp-controller="Authentication">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.avatar').click(function () {
                $('.dropdown-menu').toggle();
            });
        });
    </script>
</body>
</html>
